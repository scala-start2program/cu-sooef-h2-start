            <Grid>
                <Label Content="Naam : " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblNaam" Content="" Background="OldLace" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="204"/>
