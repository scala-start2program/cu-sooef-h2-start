                <Label x:Name="lblGeboortedatum" Content="" Background="OldLace" HorizontalAlignment="Left" Margin="100,70,0,0" VerticalAlignment="Top" Width="204"/>
                <Label x:Name="lblGeslacht" Content="" Background="OldLace" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="204"/>
                <Label Content="Leeftijd : " HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblLeeftijd" Content="" Background="OldLace" HorizontalAlignment="Left" Margin="100,150,0,0" VerticalAlignment="Top" Width="204"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
