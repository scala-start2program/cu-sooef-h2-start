                <Label Content="Geboortedatum : " HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top"/>
                <Label Content="Geslacht : " HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top"/>
